<div class="control-box main-content" id="votes">
  <div class="panel panel-white post">
    <div class="post-heading">
      <div class="pull-left image">
        <img src="<%= comment.user_avatar %>" class="img-circle avatar" alt="user profile image">
      </div>
      <div class="pull-left meta">
        <div class="title h5">
          <a href="#"><b><%= comment.user_name %></b></a>
          made a comment.
        </div>
        <h6 class="text-muted time">1 minute agaaao</h6>
      </div>
    </div>
    <div class="post-description"> 
      <p><%= comment.content %></p>
      <div class="stats">
        <a href="#" class="btn btn-default stat-item">
          <i class="fa fa-share icon"></i>
          <%= comment.comment_child?.size %>
        </a>
      </div>
    </div>
    <div class="post-footer">
      <ul class="comments-list">
        <% comment.comment_child?.each do |child_comment| %>
          <li class="comment">
            <a class="pull-left" href="#">
              <img class="avatar" src="<%= child_comment.user_avatar %>" alt="avatar">
            </a>
            <div class="comment-body">
              <div class="comment-heading">
                <h4 class="user"><%= child_comment.user_name %></h4>
                <h5 class="time">5 minutes ago</h5>
              </div>
              <p><%= child_comment.content %></p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
