<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">List video of course : <%= course.name %></h3>
  </div>   
  <ul class="list-group">
    <% course.list_lessons?.each_with_index do |lesson, i| %>
      <li class="list-group-item">
        <div class="row toggle" id="dropdown-detail-<%= i %>" data-toggle="detail-<%= i %>">
          <div class="col-xs-10 lesson">
            <%= "Lesson #{i + 1}" %>
          </div>
          <div class="col-xs-2">
            <i class="fa fa-chevron-down pull-right"></i>
          </div>
        </div>
        <div id="detail-<%= i %>">
          <hr>
          <div class="container">
            <div class="fluid-row">
              <div class="col-xs-1">
                <span class="glyphicon glyphicon-play-circle"></span>
              </div>
              <div class="col-xs-11 lesson-item" data-toggle="modal" data-target="#myModal"
                data-url="<%= lesson.video_url %>" id="lesson-show">
                <%= lesson.name %>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
